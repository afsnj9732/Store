@model List<Store.Models.tProducts>

@{
    ViewBag.Title = "Product";
}
<body>
    <h2>商品列表</h2>
    <div>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Product", new { pageNow = i })">@i</a>
                </li>
            }
        </ul>
    </div>
    <table class="table">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <button onclick="AddCart(@item.ProductID)">加入購物車</button>
                </td>
            </tr>
        }

    </table>

</body>
